<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_140"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/revenue_item_background1"
    android:id="@+id/revenue_card">

    <com.qzy.vendor.qzyCustom.QzyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/revenue"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        app:Font="Montserrat-SemiBold"
        android:textSize="@dimen/sp_12"
        android:id="@+id/revenue_card_title"/>
    <com.qzy.vendor.qzyCustom.QzyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:text="(DAILY)"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        app:Font="Montserrat-SemiBold"
        android:layout_below="@id/revenue_card_title"
        android:textSize="@dimen/sp_12"
        android:id="@+id/revenue_card_subtitle"/>

    <com.qzy.vendor.qzyCustom.QzyTextView
        android:id="@+id/revenue_card_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:text="Rs. 1,400"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:Font="Montserrat-MediumItalic" />

    <com.qzy.vendor.qzyCustom.QzyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_3"
        android:padding="@dimen/dp_5"
        android:text="@string/see_details"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/white"
        android:id="@+id/revenue_card_details"/>


</RelativeLayout>